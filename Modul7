<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Proses Login</title>
</head>
<body>

<?php
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $username = $_POST['username'];
    $password = $_POST['password'];

    // Ganti dengan username dan password yang diinginkan
    $valid_username = "admin";
    $valid_password = "password123";

    if (empty($username) || empty($password)) {
        echo "Input tidak lengkap. Silakan masukkan username dan password.";
    } elseif ($username === $valid_username && $password === $valid_password) {
        echo "Login sukses! Selamat datang, $username.";
    } else {
        echo "Login gagal. Username atau password salah.";
    }
}
?>

<br><br>
<a href="login.php">Kembali ke Halaman Login</a>

</body>
</html>

